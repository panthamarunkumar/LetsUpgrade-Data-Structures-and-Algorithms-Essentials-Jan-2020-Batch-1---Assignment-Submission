1:
int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int j=1;j<=4;j++)
        if(i>=j)
        {
            cout<<i;
        }
        else
        {
            cout<<" ";
        }
        cout<<"\n";
    }
    
}
